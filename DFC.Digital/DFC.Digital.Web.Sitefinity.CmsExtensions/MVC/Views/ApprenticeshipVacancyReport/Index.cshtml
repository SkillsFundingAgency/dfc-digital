@model JobProfileApprenticeshipVacancyReportViewModel
@using DFC.Digital.Web.Core
@using NonFactors.Mvc.Grid
@using Telerik.Sitefinity.Frontend.Mvc.Helpers
<section>
    <div id="jobProfileReport" , style="margin:10px">
        <div>
            <div style="float:left"><h3>Job Profiles and Apprenticeship Vacancy Report</h3></div>
            <div style="float:right">Report Date - @DateTime.Now</div>
            @ViewContext.HttpContext.Request.QueryString
        </div>
        <div style="clear:both">
            <div style="clear:both">
                @(Html
                    .Grid(Model.ReportData)
                    .Build(columns =>
                    {
                        columns.Add(model => model.JobProfileTitle).Titled("Title");
                        columns.Add(model => model.JobProfileStatus).Titled("Profile Status");
                        columns.Add(model => model.JoProfileLastModifiedBy).Titled("Profile Last Modified By");
                        columns.Add(model => model.SOC).Titled("SOC");
                        columns.Add(model => model.SOCDescription).Titled("SOC Description");
                        columns.Add(model => model.Standards).Titled("Standards");
                        columns.Add(model => model.Frameworks).Titled("Frameworks");
                        columns.Add(model => model.AV1Title).Titled("AV1 Title");
                        columns.Add(model => model.AV1DateCreated).Titled("AV1 Date Created");
                        columns.Add(model => model.AV2Title).Titled("AV2 Title");
                        columns.Add(model => model.AV2DateCreated).Titled("AV2 Date Created");
                    })
                        .Empty("No data found")
                        .Filterable()
                        .Sortable()
                        .Attributed(new { Id = Model.ReportName})
                )
            </div>
        </div>
    </div>
        <script type="text/javascript" src="/ResourcePackages/gds_toolkit/assets/dist/js/mvc-grid.js"></script>
        <script type="text/javascript" src="/ResourcePackages/gds_toolkit/assets/dist/js/filesaver.min.js"></script>
        <script type="text/javascript" src="/ResourcePackages/gds_toolkit/assets/dist/js/tableexport.min.js"></script>
        <script>
            $(document).ready(function () {
                $(".sfFooter").hide();
                $('.mvc-grid').mvcgrid();
                $("table").tableExport();
            });
        </script>
    
    <p>Took @Model.ExecutionTime to compile this report.</p>
</section>