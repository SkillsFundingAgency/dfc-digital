@model DFC.Digital.Data.Model.Course

<div class="govuk-!-margin-top-6 govuk-!-margin-bottom-6">
    <h2 class="govuk-heading-m">
        <a class="govuk-link" href="@Model.CourseUrl">@Model.Title</a>
    </h2>
    <ul class="govuk-list">
        <li>
            @Model.QualificationLevel
        </li>
        <li>
            @Model.StudyMode | @Model.AttendanceMode | @Model.AttendancePattern
        </li>
        <li class="govuk-!-margin-top-3">
            <span class="govuk-secondary-colour">Provider:</span> @Model.ProviderName
        </li>
        @if (!string.IsNullOrWhiteSpace(Model.Location))
        {
            <li>
                <span class="govuk-secondary-colour">Location:</span> @Model.Location
            </li>
        }
        
        <li>
            <span class="govuk-secondary-colour">Start date:</span> @Model.StartDateLabel
        </li>
        @if (!string.IsNullOrWhiteSpace(Model.Duration))
        {
            <li>
                <span class="govuk-secondary-colour">Duration:</span> @Model.Duration
            </li>
        }
        
    </ul>
</div>

<hr class="govuk-section-break govuk-section-break--visible" />