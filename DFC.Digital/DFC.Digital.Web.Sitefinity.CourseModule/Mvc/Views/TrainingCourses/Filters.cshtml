@model CourseFiltersModel

    <div class="filters filters">
        <div class="govuk-form-group">
            <label class="govuk-label" for="location">
                Location
            </label>
            <input class="govuk-input govuk-!-width-full" id="location" name="location" type="text">
        </div>

        <div class="govuk-form-group">
            <label class="govuk-label" for="provider">
                Provider
            </label>
            <input class="govuk-input govuk-!-width-full" id="provider" name="provider" type="text">
        </div>

        <div class="filter-container">
            <div class="filter-label">
                <h3 class="govuk-heading-s govuk-!-margin-0">Course hours</h3>
            </div>
            <div class="filter-box">
                <fieldset class="govuk-fieldset">
                    <div class="govuk-radios">

                        @foreach (var item in Model.StudyModeSelectedList)
                        {
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="@item.Id" name="@item.Name" type="radio" @item.Checked value="@item.Value"><label class="govuk-label govuk-radios__label govuk-!-font-size-16" for="@item.Id">
                                    @item.Label
                                </label>
                            </div>
                        }
                    </div>
                </fieldset>
            </div>
        </div>

        <div class="filter-container">
            <div class="filter-label">
                <h3 class="govuk-heading-s govuk-!-margin-0">Course type</h3>
            </div>

            <div class="filter-box">
                <fieldset class="govuk-fieldset">
                    <div class="govuk-radios">

                        @foreach (var item in Model.AttendanceSelectedList)
                        {
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="@item.Id" name="@item.Name" type="radio" @item.Checked value="@item.Value"><label class="govuk-label govuk-radios__label govuk-!-font-size-16" for="@item.Id">
                                    @item.Label
                                </label>
                            </div>
                        }
                    </div>
                </fieldset>
            </div>
        </div>

        <div class="filter-container">
            <div class="filter-label">
                <h3 class="govuk-heading-s govuk-!-margin-0">Start date</h3>
            </div>
            <div class="filter-box">
                <fieldset class="govuk-fieldset">
                    <div class="govuk-radios govuk-radios--conditional" data-module="radios" ">
                        <div class="govuk-form-group">

                            @foreach (var item in Model.StartDateSelectedList)
                            {
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="@item.Id" name="@item.Name" type="radio" @item.Checked value="@item.Value" data-aria-controls="conditional-start-date-conditional-1"><label class="govuk-label govuk-radios__label govuk-!-font-size-16" for="@item.Id">@item.Label</label>
                                </div>
                            }
                            <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-start-date-conditional-1" style="margin-left: 0px">
                                <div class="govuk-form-group">
                                    <label class="govuk-label govuk-!-font-size-16" for="startDate-Date">
                                        Start date
                                    </label>
                                    <div class="govuk-date-input" id="startDate-Date">
                                        <div class="govuk-date-input__item">
                                            <div class="govuk-form-group">
                                                <label class="govuk-label govuk-date-input__label govuk-!-font-size-16" for="startDate-Date-day">
                                                    Day
                                                </label>
                                                <input class="govuk-input govuk-date-input__input govuk-input--width-2" id="startDate-Date-day" name="startDate-Date-day" type="number" pattern="[0-9]*">
                                            </div>
                                        </div>
                                        <div class="govuk-date-input__item">
                                            <div class="govuk-form-group">
                                                <label class="govuk-label govuk-date-input__label govuk-!-font-size-16" for="startDate-Date-month">
                                                    Month
                                                </label>
                                                <input class="govuk-input govuk-date-input__input govuk-input--width-2" id="startDate-Date-month" name="startDate-Date-month" type="number" pattern="[0-9]*">
                                            </div>
                                        </div>
                                        <div class="govuk-date-input__item">
                                            <div class="govuk-form-group">
                                                <label class="govuk-label govuk-date-input__label govuk-!-font-size-16" for="startDate-Date-year">
                                                    Year
                                                </label>
                                                <input class="govuk-input govuk-date-input__input govuk-input--width-2" id="startDate-Date-year" name="startDate-Date-year" type="number" pattern="[0-9]*">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="submit js-live-search-fallback">

            <button class="gem-c-button govuk-button" type="submit">Submit filters</button>


        </div>
    </div>
