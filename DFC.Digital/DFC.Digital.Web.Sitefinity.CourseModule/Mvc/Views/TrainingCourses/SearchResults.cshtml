@model DFC.Digital.Web.Sitefinity.CourseModule.TrainingCourseResultsViewModel


@* Top Full Width Content Block *@
@using (Html.BeginForm("", "TrainingCourses", FormMethod.Post))
{

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Find a course</h1>
            <p class="govuk-body">Filtering courses by:</p>
            <p class="govuk-body"><span class="govuk-secondary-colour">Course type: </span><span class="govuk-!-font-weight-bold">All</span>, <span class="govuk-secondary-colour">Course date: </span><span class="govuk-!-font-weight-bold">Anytime</span></p>
            <p class="govuk-body"><a href="">Reset</a></p>
        </div>
    </div>

    if (!string.IsNullOrWhiteSpace(Model.ActiveFilterOptions) || Model.Courses.Any())
    {
        <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-8">
    }
    <div class="govuk-grid-row">
        @* Filter Section - Within 1/3 Content Block *@
        <div class="govuk-grid-column-one-third">
            @Html.Partial("Filters", Model.CourseFiltersModel)
        </div>
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-form-group">
                <div class="search-header">
                    <div class="searchfield">
                        <div class="search-input">
                            <label for="search-main" class="search-title">

                             Showing results for <span class="govuk-visually-hidden">@Model.SearchTerm</span>
                              
                            </label>
                            @Html.TextBoxFor(x => x.SearchTerm, new { placeholder = "Search for courses", @class = "search-input", id = "search-main", type = "search" })
                        </div>
                        <div class="search-submit">
                            <button type="submit" class="button">Search</button>
                        </div>
                    </div>
                </div>
                @if (Model.Courses.Any())
                {
                    @Html.Partial("OrderByLinks", Model.OrderByLinks)
                }
            </div>

            @if (Model.Courses.Any())
            {
                <div id="results-summary">

                    <h3 class="govuk-body-s govuk-!-margin-bottom-1">Showing @Model.RecordsOnPageLabel of @Model.ResultsCount results</h3>
                    <hr class="govuk-section-break govuk-section-break--visible" />

                </div>

            }
            else
            {
                <h3 class="govuk-body-s govuk-!-margin-bottom-1">No training courses found</h3>
            }

            @foreach (var course in Model.Courses)
            {
                @Html.Partial("CourseDetail", course)
            }

            @Html.Partial("Pagination", Model.PaginationViewModel)

        </div>
    </div>
}




