@model  DFC.Digital.Web.Sitefinity.JobProfileModule.Mvc.Models.JobProfileDetailsViewModel

@using System.Globalization;

<div class="content-container">
    <div class="grid-row">
        <div class="column-desktop-two-thirds">
            <h1 class="heading-xlarge"> @Model.Title</h1>
            @if (!string.IsNullOrWhiteSpace(Model.AlternativeTitle))
            {
                <h2 class="heading-secondary"><span class="sr-hidden">Alternative titles for this job include </span>@Model.AlternativeTitle</h2>
            }

            <p>@Model.Overview</p>
        </div>
    </div>
    <div class="grid-row">
        <div id="Salary" class="column-40 job-profile-heroblock">
            <h2>
                @Model.SalaryText
                @if (!string.IsNullOrEmpty(Model.SalaryTextSpan))
                {
                    <span>@Model.SalaryTextSpan</span>
                }
                @if (!string.IsNullOrEmpty(Model.SalaryContextLink) && !string.IsNullOrEmpty(Model.SalaryContextText))
                {
                    <a href='@Model.SalaryContextLink'>@Model.SalaryContextText</a>
                }
            </h2>
            <div class="job-profile-salary job-profile-heroblock-content">
                @if (Model.SalaryStarter > 0 && Model.SalaryExperienced > 0)
                {
                    <p class="dfc-code-jpsstarter">@string.Format(new CultureInfo("en-GB", false), "{0:C0}", Model.SalaryStarter) <span>@Model.SalaryStarterText</span></p> 
                     <i class="sr-hidden">@Model.SalaryRangeDivider</i>
                    <p class="dfc-code-jpsexperienced">@string.Format(new CultureInfo("en-GB", false), "{0:C0}", Model.SalaryExperienced) <span>@Model.SalaryExperiencedText</span></p>
                }
                else
                {
                    <h5 class="dfc-code-jpsalaryblank">@Model.SalaryBlankText</h5>
                }
            </div>
        </div>
        <div id="WorkingHours" class="column-30 job-profile-heroblock">
            <h2>@Model.HoursText <span>@Model.HoursTimePeriodText</span></h2>
            <div class="job-profile-hours job-profile-heroblock-content">
                <p class="dfc-code-jphours">
                    @if (string.IsNullOrWhiteSpace(Model.MinimumHours) || string.IsNullOrWhiteSpace(Model.MaximumHours))
                    {
                        @Model.MaxAndMinHoursAreBlankText
                    }
                    else
                    {
                        @Model.MinimumHours <text>to</text> @Model.MaximumHours
                    }
                    <span  class="dfc-code-jpwhoursdetail">@Model.WorkingHoursDetails</span>
                </p>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(Model.WorkingPattern))
        {
            <div id="WorkingHoursPatterns" class="column-30 job-profile-heroblock">
                <h2>
                    @Model.WorkingPatternText
                    @if (!string.IsNullOrEmpty(Model.WorkingPatternSpanText))
                    {
                        <span>@Model.WorkingPatternSpanText</span>
                    }
                </h2>
                <div class="job-profile-pattern job-profile-heroblock-content">
                    <p class="dfc-code-jpwpattern">
                        @Model.WorkingPattern
                        @if (!string.IsNullOrEmpty(Model.WorkingPatternDetails))
                        {
                            <span class="dfc-code-jpwpatterndetail">@Model.WorkingPatternDetails</span>
                        }
                    </p>
                </div>
            </div>
        }
    </div>
</div>